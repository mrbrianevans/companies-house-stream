{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleDetection": "force",
    "allowJs": true,
    "esModuleInterop": true,
    // best practices
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true
  }
}
