{
  "compileOnSave": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "dist",
    "target": "ES2022",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "module": "ES2022",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext"
    ],
    "inlineSourceMap": true,
    "inlineSources": true,
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "../node_modules"
  ]
}
